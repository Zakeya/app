<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/back2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Girls"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/girl2" />

            <TextView
                android:id="@+id/goal_girls_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:text="0"
                android:textColor="#64FFDA"
                android:textSize="45sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#80CBC4"
                android:onClick="addOneForGirls"
                android:text="Goal"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foul_girls_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:text="0"
                android:textColor="#78909C"
                android:textSize="45sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="#80CBC4"
                android:onClick="addOneForGirlss"
                android:text="Foul"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#4DB6AC"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/back2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boys"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"
                android:padding="20dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/boy2"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/goal_boys_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="#64FFDA"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Goal"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="#80CBC4"
                android:onClick="addOneForBoys"/>

            <TextView
                android:id="@+id/foul_boys_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="#78909C"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Foul"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="#80CBC4"
                android:layout_marginBottom="20dp"
                android:onClick="addOneForBoyss"
            />



        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#80CBC4"
        android:layout_marginBottom="5dp"
        android:onClick="resetAll"/>


</RelativeLayout>




